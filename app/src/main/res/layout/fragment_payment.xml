<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        tools:context="wmk.playstore.rumahraga.ui.fragments.transaction.PaymentFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_back"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/popmed"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_16ssp"
                        android:text="Pembayaran"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_14sdp"
                    android:background="@drawable/login_container"
                    android:layout_height="match_parent">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_above="@id/bottomLayout"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:layout_width="match_parent"
                                android:id="@+id/shimmerMain"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        app:cardBackgroundColor="@color/background"
                                        android:layout_height="@dimen/_70sdp"/>




                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardBackgroundColor="@color/background"
                                        android:layout_height="@dimen/_25sdp"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:text="Klik gambar untuk memperbesar"
                                        android:fontFamily="@font/popreg"
                                        android:textSize="@dimen/_9ssp"/>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardBackgroundColor="@color/background"
                                        android:layout_height="@dimen/_25sdp"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:text="Klik gambar untuk memperbesar"
                                        android:fontFamily="@font/popreg"
                                        android:textSize="@dimen/_9ssp"/>


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardBackgroundColor="@color/background"
                                        android:layout_height="@dimen/_30sdp"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:text="Klik gambar untuk memperbesar"
                                        android:fontFamily="@font/popreg"
                                        android:textSize="@dimen/_9ssp"/>




                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardBackgroundColor="@color/background"
                                        android:layout_height="@dimen/_40sdp"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:text="Klik gambar untuk memperbesar"
                                        android:fontFamily="@font/popreg"
                                        android:textSize="@dimen/_9ssp"/>

                                </LinearLayout>
                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:id="@+id/lrMain"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivPayment"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="@dimen/_80sdp"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Klik gambar untuk memperbesar"
                                    android:fontFamily="@font/popreg"
                                    android:textSize="@dimen/_9ssp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tvPaymentName"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="QRIS Rumah Raga"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_11ssp"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tvCredential"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="13435779232332"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_16ssp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/gray"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:text="Total yang harus dibayar"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_9ssp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tvTotalPrice"
                                    android:background="@drawable/spinner_stroke"
                                    android:textColor="@color/main"
                                    android:text="Rp. 500.000"
                                    android:padding="@dimen/_5sdp"
                                    android:fontFamily="@font/popsem"
                                    android:textSize="@dimen/_20ssp"/>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:text="Daftar pemesanan"
                                        android:fontFamily="@font/popmed"
                                        android:textSize="@dimen/_13ssp"/>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_width="match_parent"
                                        android:id="@+id/rvOrder"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>


                            </LinearLayout>

                            </LinearLayout>


                    </androidx.core.widget.NestedScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:id="@+id/bottomLayout"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/lrCheckout"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total pembayaran"
                                android:textColor="@color/main"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/popreg"
                                android:textSize="@dimen/_11ssp"/>
                            <TextView
                                android:id="@+id/tvCheckOutPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/popsem"
                                android:textSize="@dimen/_15ssp"/>



                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpenBottomSheet"
                            android:layout_width="wrap_content"
                            app:cornerRadius="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/lrCheckout"
                            android:layout_height="wrap_content"
                            android:text="Upload bukti"/>
                    </RelativeLayout>


                </RelativeLayout>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/vOverlay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/overlay"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/imageView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/btnClosePreview"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_close"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/vOverlay2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/overlay"
                android:layout_height="match_parent"/>
        </RelativeLayout>


        <!--        Bottom sheet checkout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/bottomSheetPayment"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_main"
                android:orientation="vertical">
                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:layout_width="wrap_content"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"
                        android:src="@drawable/ic_receipt"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/popmed"
                            android:layout_height="wrap_content"
                            android:text="Upload bukti pembayaran"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/popreg"
                            android:layout_height="wrap_content"
                            android:text="Harap upload bukti pembayaran anda dengan jelas"/>

                    </LinearLayout>


                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/login_container"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivPaymentReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"/>

                            <LinearLayout
                                android:id="@+id/tvImageClick"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/_65sdp"
                                    android:src="@drawable/ic_picture"
                                    android:layout_gravity="center_horizontal"
                                    android:tint="@color/gray"
                                    android:layout_height="@dimen/_65sdp"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:fontFamily="@font/popreg"
                                    android:textSize="@dimen/_10ssp"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_height="wrap_content"
                                    android:text="Klik untuk memilih gambar"/>
                            </LinearLayout>


                        </RelativeLayout>









                        <View
                            android:layout_width="match_parent"
                            android:background="@color/background"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="@dimen/_1sdp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="end"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content">


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUploadReceipt"
                                android:layout_width="wrap_content"
                                app:cornerRadius="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:text="Kirim bukti pembayaran"/>
                        </RelativeLayout>



                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>









            </LinearLayout>





        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
