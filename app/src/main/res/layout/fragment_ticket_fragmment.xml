<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingRight="@dimen/_14sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background"
        tools:context="wmk.playstore.rumahraga.ui.fragments.ticket.TicketFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_back"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <com.mreram.ticketview.TicketView
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:tv_circleSpace="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivTicket"
                                android:layout_width="@dimen/_80sdp"
                                android:scaleType="fitXY"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="@dimen/_80sdp"/>

                            <TextView
                                android:id="@+id/tvTransactionCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RX23232322323"
                                android:includeFontPadding="false"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"/>


                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Lapangan tri lomba juang"
                                android:fontFamily="@font/popreg"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_11ssp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/diviider_container"/>

                            <TextView
                                android:id="@+id/tvFieldName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Lapangan tri lomba juang"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvAddress"
                                android:text="Jl. Mneteri supeno No. 32 Kota Semarang"
                                android:fontFamily="@font/popreg"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_11ssp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/diviider_container"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvUsername"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Vanessia Dwi Putri"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/tvEmail"
                                android:layout_height="wrap_content"
                                android:text="vanesia@gmail.com"
                                android:fontFamily="@font/popreg"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_11ssp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/diviider_container"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Detail pesananan"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:id="@+id/rvItem"
                                android:layout_height="wrap_content"/>

                            <View

                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/diviider_container"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="RP. 200.000"
                                android:id="@+id/tvTotalPrice"
                                android:fontFamily="@font/popmed"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/diviider_container"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Aplikasi Rumah Raga"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_11ssp"/>

                        </LinearLayout>



                    </LinearLayout>





                </com.mreram.ticketview.TicketView>


            </androidx.core.widget.NestedScrollView>

        </LinearLayout>






    </RelativeLayout>

</layout>
